<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <div class="container">
            <section>
                <div class="columns is-centered">
                    <div class="column is-6">
                        <h1>Editar usuario</h1>
                        <form action="/users/<%= user.id %>?_method=PUT" method="POST">

                            <div class="field">
                                <label for="first_name">Nombre</label>
                                <div class="control">
                                    <input type="text" name="first_name" id="first_name" value="<%= user.first_name %>">
                                </div>
                                <p class="feedback is error">Un error</p>
                            </div>

                            <div class="field">
                                <label for="last_name">Apellido</label>
                                <div class="control">
                                    <input type="text" name="last_name" id="last_name" value="<%= user.last_name %>">
                                </div>
                                <p class="feedback"></p>
                            </div>

                            <div class="field">
                                <label for="email">Email</label>
                                <div class="control">
                                    <input type="text" name="email" id="email" value="<%= user.email %>">
                                </div>
                                <p class="feedback"></p>
                            </div>

                            <div class="field">
                                <label for="password">Password</label>
                                <div class="control">
                                    <input type="password" name="password" id="password">
                                </div>
                                <p class="feedback"></p>
                            </div>

                            <div class="field">
                                <label for="category">Categoría</label>
                                <div class="control">
                                    <select name="category" id="category">
                                        <option value="">Seleccione una opción</option>
                                        <option value="vendedor" <%= user.category == 'vendedor' ? 'selected' : ''; %>>Vendedor</option>
                                        <option value="comprador" <%= user.category == 'comprador' ? 'selected' : ''; %>>Comprador</option>
                                    </select>
                                </div>
                                <p class="feedback"></p>
                            </div>

                            <div class="field">
                                <div class="control">
                                    <button type="submit">Editar usuario</button>
                                </div>
                            </div> 
                        </form>  
                    </div>
                </div>
            </section>
        </div>
    </main>
</body>
</html>